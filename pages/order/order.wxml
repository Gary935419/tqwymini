        <view class='order_caption' wx:for="{{item.lname}}" wx:for-item="lnameitem" wx:key="{{lnameitem}}">{{lnameitem}}</view>
        <!--  / .order_info--></view>
      <!--  / .order_box--></view>
      <view class='order_area'>
        <view class='order_text'>审核中</view>
      <!--  / .order_area--></view>
    <!--  / .order_list--></view>
  <!--  / .order_block--></view>

  <view class="order_block {{ostate == 3 ? '' : 'tui-hide'}}">
     <view class='order_list' wx:for="{{orderostate3}}" wx:key="key" data-id='{{item.oid}}' bindtap='go_taskorderdetail'>
      <image src='{{item.otaimg}}' mode='widthFix' />
