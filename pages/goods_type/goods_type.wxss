.left-navbar {
  position: fixed;
  left: 0;
  top: 0px;
  bottom: 0;
  width: 25%;
  height: auto;
  background-color: #eee;
  font-size: 15px;
}

.left-navbar view {
  padding: 30rpx 10rpx;
  text-align: center;
  position: relative;
  box-sizing: border-box;
}

.active {
  background-color: #fff;
  color: #0068c6;
  font-size: 17px;
}

.active::before {
  content: " ";
  position: absolute;
  top: 20rpx;
  bottom: 20rpx;
  left: 10rpx;
  width: 6rpx;
  background: #0068c6;
  border-radius: 20rpx;
}

#right {
  position: absolute;
  right: 0;
  width: 75%;
  height: 100%;
}

.img-banner {
  height: 150rpx;
  width: 100%;
}

.goods-list {
  display: flex;
  flex-wrap: wrap;
  margin-top: 16rpx;
}

.goods-title {
  width: 100%;
  font-size: 15px;
  font-weight: bold;
  padding-left: 10rpx;
}

.goods {
  width: calc(50% - 20rpx);
  font-size: 14px;
  margin: 10rpx;
  border-radius: 10rpx;
  background: #fff;
  overflow: hidden;
  height: auto;
  padding-bottom: 15rpx;
  text-align: center;
}

.goods image {
  width: 100%;
  border: 0;
  display: block;
  margin: 0 auto;
}

.goods .g_name {
  font-size: 0.8rem;
  color: #454545;
  padding: 10rpx 10rpx 5rpx 10rpx;
  display: block;
  text-align: center;
	width: 260rpx;
	overflow:hidden;
	white-space:nowrap;
	text-overflow:ellipsis;
}

.goods .g_price {
  font-size: 0.8rem;
  color: #f00;
  padding: 0rpx 10rpx 10rpx 10rpx;
  display: block;
  text-align: center;
}
