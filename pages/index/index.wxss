/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}


.swiper image {
 width: 100%;
 height: auto;
}
  
.swiper-image {
 height: 100%;
 width: 100%;
}
  
.slide-image {
 height: 100%;
 width: 100%;
 display: block;
}
.List-title-box{
  font-size: 28rpx;
  margin-bottom: 20rpx;
}
.title-box{
  display: flex;
  align-items: flex-end;
}
.List-icon{
  width: 50rpx;
  height: 50rpx;
  margin-right: 10rpx;
  background-size: contain;
  background-image: url("data:image/svg+xml;base64,");
}

.list-item{
  padding:40rpx 30rpx 40rpx 0; 
  display: flex;
  align-items: flex-start;
  border-bottom: 1rpx solid #edf0f2;
}

.list-img{
   width: 38%;
}

.list-right{
  width: 62%;
}

.list-img image{
   display:block; 
   width: 200rpx;
   height: 200rpx;
}

.list-tlt{
  font-size: 28rpx;
  color: #333333;
  font-weight: bold;
  margin-bottom: 10px;
}

.list-remark{
  color: #a9a9a9;
  font-size: 22rpx;
  display:block;
  /* height:22rpx; */
  line-height: 30rpx;
  margin-top:15rpx;
}

.list-info{
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top:35rpx;
}

.list-num{
  color: #595959;
  font-size: 24rpx;
}

.list-num text{
   color: #8c8c8c;
   margin-right:15rpx;
}

.list-price text{
  font-size: 30rpx;
  color: #e60012;
  margin-left: 5rpx;
  font-weight: bold;
}

.list-price{
  font-size: 20rpx;
  color: #e60012;
}

.list-empty{
   padding-top:170rpx;
   text-align: center;
}

.empty-img{
  display:block;
  margin:0 auto 60rpx auto;
  width: 200rpx;
  height: 200rpx;
}

.list-empty text{
  color: #333333;
  font-size: 34rpx;
}

.srcoll_view{
position: absolute;
top:0rpx;
height: 100rpx;
font-size: 30rpx;
white-space: nowrap;
line-height: 100rpx;
color: #00bff3;
animation:myfirst 20s linear infinite;
}
@keyframes myfirst
{
  0% {margin-left:750rpx;}
  100% {margin-left:-1500rpx;}
}
.scroll_view_border{
position: relative;
width: 100%;
background: #FFFFFF;
height: 100rpx;
overflow: hidden;
}