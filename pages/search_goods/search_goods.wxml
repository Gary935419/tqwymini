<navigationBar text="{{nav.title}}" back="{{nav.back}}" home="{{nav.home}}"></navigationBar>
<view class="weui-search-bar">
		<view class="weui-search-bar__form">
		<!-- 搜索框 -->
			<view class="weui-search-bar__box" style="width: 20rem;">
				<icon class="weui-icon-search_in-box" type="search" size="14"></icon>
				<input type='text' placeholder='请输入搜索内容' value='{{inputValue}}' name='keywords' bindinput='keyInput' />
			</view>
		</view>
		<!-- 搜索按钮,调用搜索查询方法 -->
		<view class="weui-search-bar__cancel-btn" bindtap='searchgoods'>搜索</view>
	</view>
<view class='content'>
  <!-- 有结果 -->
  <view class='list'>
    <view class='list-bg'>
     <view class='list-item' wx:for="{{list}}" wx:key="key" data-id='{{item.gid}}' bindtap='godetail'>
        <view class='list-img'>
          <image src='{{item.gimg}}'></image>
        </view>
        <view class='list-right'>
          <view class='list-tlt'>
            {{item.gname}}
          </view>
          <text class='list-remark'>{{item.gtitle}}</text>
          <view class='list-info'>
            <view class='list-price'>积分:
              <text>{{item.gintegral}}</text>
            </view>
            <view class='list-num'>
              <text>库存:</text>{{item.gstock}}个
            </view>
          </view>
        </view>
      </view>
    </view>
  </view>
  <!-- 结果为空 -->
 <view class='list-empty' wx:if="{{list.length===0}}" hidden="{{empty_hidden}}">
    <image class='empty-img' src="../../images/empty.png"></image>
    <text>很抱歉，没有找到相关商品！</text>
  </view>
</view>