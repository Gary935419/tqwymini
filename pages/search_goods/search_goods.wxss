.fixed {
  width: 100%;
  position: fixed;
}

.top-bg {
  height: 90rpx;
  display: flex;
  align-items: center;
  padding: 0 20rpx;
  border-bottom: 1rpx solid #edf0f2;
  box-shadow: rgba(200, 202, 204, 0.1)0 4px 4px;
}

.top {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.left {
  width: 78%;
  background: #f2f5f7;
  height: 56rpx;
  display: flex;
  align-items: center;
  padding: 0 20rpx;
  border-radius: 5rpx;
}

.icon-search {
  display: block;
  width: 25rpx;
  height: 25rpx;
}

.left input {
  font-size: 26rpx;
  margin-left: 15rpx;
  width: 80%;
}

.search-btn {
  height: 54rpx;
  line-height: 54rpx;
  font-size: 24rpx;
  text-align: center;
}

